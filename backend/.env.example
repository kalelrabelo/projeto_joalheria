


# ==================== BANCO DE DADOS ====================
# PostgreSQL - Para múltiplos usuários simultâneos
DATABASE_URL=postgresql://user:pass@localhost:5432/joalheria_db

# Configurações alternativas para desenvolvimento
# DATABASE_URL=postgresql://usuario:senha@servidor:porta/nome_banco

# ==================== APLICAÇÃO ====================
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your_super_secret_key_here

# ==================== SEGURANÇA ====================
# Chave para criptografia de senhas
BCRYPT_ROUNDS=12

# ==================== LOGS ====================
LOG_LEVEL=INFO
LOG_FILE=cosmos_system.log

# ==================== BACKUP ====================
BACKUP_ENABLED=True
BACKUP_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=30

# ==================== PERFORMANCE ====================
# Pool de conexões do banco
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_RECYCLE=3600

